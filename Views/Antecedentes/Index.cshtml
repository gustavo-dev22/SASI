@using SASI.Rest

@model ConsultaAntecedentesResponse

@{
    ViewData["Title"] = "Consulta de Antecedentes Policiales";
}

<h2>Consulta de Antecedentes Policiales</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="dni">DNI</label>
        <input type="text" name="dni" id="dni" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Consultar</button>
</form>

<hr />

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
else if (Model != null)
{
    <h4 class="mt-4">Resultado:</h4>
    <ul class="list-group">
        <li class="list-group-item"><strong>Nombre completo:</strong> @Model.nombrecompleto</li>
        <li class="list-group-item"><strong>Documento:</strong> @Model.nroDocumento</li>
        <li class="list-group-item"><strong>Mensaje:</strong> @Model.descripcionMensaje</li>
        <li class="list-group-item">
            <strong>Antecedentes:</strong>
            @(Model.codigoMensaje == "0000" ? "No tiene" : "Posible coincidencia o verificación requerida")
        </li>
    </ul>
}